<p id="notice"><%= notice %></p>

<h1>Movements</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Account</th>
      <th>Final balance</th>
      <th>Amount</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement&.category&.name %></td>
        <td><%= movement.account_id %></td>
        <td><%= movement.final_balance %></td>
        <td><%= movement.amount %></td>
        <td><%= movement.comment %></td>
        <td><%= link_to 'Show', account_movement_path(@account, movement) %></td>
        <td><%= link_to 'Edit', edit_account_movement_path(@account, movement) %></td>
        <td><%= link_to 'Destroy', account_movement_path(@account, movement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movement', new_account_movement_path %>
