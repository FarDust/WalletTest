<%= form_with(model: debt, local: true) do |form| %>
  <% if debt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(debt.errors.count, 'error') %> prohibited this debt from being saved:</h2>

      <ul>
        <% debt.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= "#{form.label(:interest)} (*0,001%)" %>
    <%= form.number_field(:interest) %>
  </div>

  <div class="field">
    <%= form.label(:amount) %>
    <%= form.number_field(:amount) %>
  </div>

  <div class="field">
    <%= form.label(:acreedor_type) %>
    <%= form.select(:acreedor_type,
                    %w[NaturalPerson User],
                    {
                      include_blank: 'Selecciona categoría'
                    },
                    class: 'form-control',
                    required: true) %>
  </div>

  <div class="field">
    <%= form.label(:acreedor_id) %>
    <%= form.number_field(:acreedor_id) %>
  </div>

  <div class="field">
    <%= form.label(:deudor_type) %>
    <%= form.select(:deudor_type,
                    %w[NaturalPerson User],
                    {
                      include_blank: 'Selecciona categoría'
                    },
                    class: 'form-control',
                    required: true) %>
  </div>

  <div class="field">
    <%= form.label(:deudor_id) %>
    <%= form.number_field(:deudor_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
