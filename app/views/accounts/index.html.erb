<p id="notice"><%= notice %></p>

<h1>Accounts</h1>
<div class="container-fluid">
  <div class="row">
    <% @accounts.each do |account| %>
      <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="card card-stats">
        <div class="card-header card-header-warning card-header-icon">
          <div class="card-icon">
            <i class="material-icons">account_balance_wallet</i><!-- TODO: add icon by account type -->
          </div>
          <p class="card-category"><%= account.account_type %></p>
          <h3 class="card-title"><%= account.balance %>
            <small><%= account.balance_currency %></small>
          </h3>
        </div>
        <div class="card-body">
          <% if account.quota > 0 %>
            Max account quota: <%= account.quota %>
          <% end %>
        </div>
        <div class="card-footer">
          <div class="stats">
            <span><i class="material-icons">admin_panel_settings</i><%= link_to 'Show', account %></span>
            <span><i class="material-icons">build</i><%= link_to 'Edit', edit_account_path(account) %></span>
            <span class="text-danger"><i class="material-icons">delete_forever</i><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<br>

<%= link_to 'New Account', new_account_path %>
